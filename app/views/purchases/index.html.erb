<h2>Purchases</h2>

<% if @purchases.empty? %>
  <p>You have no purchases yet</p>
<% else %>
  <table>
    <tr>
      <th><%= "Purchase #" %></th>
      <th><%= "Total Price" %></th>
    </tr>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.id, purchase %></td>
        <td><%= purchase.total_price %></td>
      </tr>
    <% end %>
  </table>
<% end %>
