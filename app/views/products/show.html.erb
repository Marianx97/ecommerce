<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>
<%= form_with(url: carts_add_product_path) do |f| %>
  <%= f.hidden_field :product_id, value: @product.id%>
  <%= f.submit 'Add to cart' %>
<% end %>
