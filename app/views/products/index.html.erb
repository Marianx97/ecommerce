<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<table id="products">
  <tr>
    <th><%= "Product Name" %></th>
    <th><%= "Product Price" %></th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to product.name, product %></td>
      <td><%= product.price %></td>
      <td><%= link_to "Edit", edit_product_path(product) %></td>
      <td><%= link_to "Delete", product, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New product", new_product_path %>
